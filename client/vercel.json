{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://marn-stack-task-manager.onrender.com"
  },
  "build": {
    "command": "npm run build",
    "output": "dist"
  },
  "preview": {
    "command": "npm run dev",
    "port": 3000
  }
}