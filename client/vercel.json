{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://marn-stack-task-manager.onrender.com"
  },
  "build": {
    "command": "npm run build",
    "output": "dist"
  },
  "preview": {
    "command": "npm run dev",
    "port": 3000,
    "env": {
      "VITE_API_URL": "http://localhost:8800"
    }
  }
}